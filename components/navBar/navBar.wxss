/* components/navBar/navBar.wxss */
.nav-box{
  width: 90%;
  height: 100rpx;
  position: fixed;
  bottom: 50rpx;
  right: 50%;
  margin-right: -45%;
  z-index: 1;
  background: white;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, .5);
  border-radius: 100rpx;
  transition: all 0.6s;
}
.nav-bar{
  width: 80%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-right: 10%;
}
.nav-bar-hide{
  width: 100rpx;
  height: 100rpx;
  background: white;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, .5);
  border-radius: 100rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  position: fixed;
  bottom: 50rpx;
  right: 50%;
  margin-right: -45%;
  z-index: 1;
  transition: all 0.6s;
}
.nav-item{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.nav-icon{
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 6rpx;
}
.nav-text{
  font-size: 20rpx;
  color: #999999;
}
.nav-item.active .nav-text{
  color: #008caf;
}
.navicon{
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  right: 15rpx;
  top: 15rpx;
}
.navicon image{
  width: 100%;
  height: 100%;
}