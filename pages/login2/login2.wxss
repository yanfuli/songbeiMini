/**index.wxss**/
page{
  background: #ffffff;
}
.container{
  width: 100%;
  height: auto;
  overflow: hidden;
  display:flex;
  justify-content: center;
  align-items: center;
}
.form-box{
  width: 690rpx;
  height: auto;
  overflow: hidden;
  background:white;
  border-radius:10rpx;
  box-sizing:border-box;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.inp-box{
  width: 100%;
  margin: 30rpx auto;
  border-bottom: 1px #eeeeee solid;
}
.inp-box input{
  width: 450rpx;
  height: 100rpx;
  font-size: 28rpx;
}
.inp-box text{
  font-size: 30rpx;
  color: #333333;
}
.submit-btn{
  width: 560rpx;
  height: 70rpx;
  color: white;
  background: #4393f4;
  font-size: 28rpx;
  line-height: 70rpx;
  text-align: center;
  margin: 80rpx auto;
}
.page-title{
  font-size: 32rpx;
  color: #333333;
  text-align: center;
}
.reminder{
  width: 100%; 
}
.reminderTitle{
  display: block;
  font-size: 22rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #666666;
  line-height: 40rpx;
}
.reminderCont{
  display: block;
  font-size: 22rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
}